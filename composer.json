{
    "name": "swew/test",
    "description": "A test framework that is designed to fix the fatal flaw of other test frameworks.",
    "license": "MIT",
    "authors": [
        {
            "name": "AVIL13",
            "email": "avil@swew.app"
        }
    ],
    "config": {
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "bin": [
        "bin/t"
    ],
    "autoload": {
        "psr-4": {
            "Swew\\Test\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ],
        "exclude-from-classmap": [
            "spec",
            "/Tests/",
            "/test/",
            "/tests/"
        ]
    },
    "archive": {
        "exclude": ["tests", "swew-test.json"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "laravel/pint": "^0.2",
        "phpstan/phpstan": "^1.8",
        "swew/dd": "^1.0",
        "vimeo/psalm": "^4.24"
    },
    "scripts": {
        "test": "php ./tests/Suite/RunTest.php",
        "static": "./vendor/bin/psalm --no-cache",
        "stan": "vendor/bin/phpstan analyse src",
        "code-check": "./vendor/bin/pint",
        "check": [
            "@static",
            "@stan",
            "@code-check"
        ]
    }
}
