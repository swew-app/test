{
    "name": "swew/test",
    "description": "A test framework that is designed to fix the fatal flaw of other test frameworks.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "TDD",
        "testing",
        "fast",
        "lightweight",
        "informative interface"
    ],
    "authors": [
        {
            "name": "AVIL13",
            "email": "avil@swew.app"
        }
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "bin": [
        "bin/t"
    ],
    "autoload": {
        "psr-4": {
            "Swew\\Test\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ],
        "exclude-from-classmap": [
            "spec",
            "/Tests/",
            "/test/",
            "/tests/"
        ]
    },
    "archive": {
        "exclude": [
            "tests",
            "swew.json"
        ]
    },
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "swew/cli": "^1.1.17",
        "swew/dd": "^1.3.1"
    },
    "require-dev": {
        "laravel/pint": "v1.10.0",
        "phpstan/phpstan": "^1.10.54",
        "psalm/phar": "5.10.0"
    },
    "scripts": {
        "test": "t",
        "static": "./vendor/psalm/phar/psalm.phar --no-cache",
        "stan": "vendor/bin/phpstan analyse src --level=3",
        "code-check": "./vendor/bin/pint",
        "check": [
            "@static",
            "@stan",
            "@code-check"
        ]
    }
}
